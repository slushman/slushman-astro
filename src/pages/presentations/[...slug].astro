---
import { CollectionEntry, getCollection, getEntries } from 'astro:content';
import { Debug } from 'astro/components';

import Presentation from 'layout:Presentation';

export async function getStaticPaths() {
	const presentations = await getCollection('presentations');
	return presentations.map((presentation: CollectionEntry<'presentations'>) => ({
		params: { slug: presentation.slug },
		props: presentation,
	}));
}
type Props = CollectionEntry<'presentations'>;

const presentation = Astro.props;
const { data } = presentation;
const {
  author,
  title,
} = data;
const { Content } = await presentation.render();
---
<Presentation author={author} title={title}>
  <Content />
</Presentation>
