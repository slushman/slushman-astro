---
import Head from 'component:Head';
import Header from 'component:Header';
import SocialMenu from 'component:SocialMenu';
import { SiteMeta } from '../siteMeta';

const { title, description, permalink } = Astro.props;

const thisYear = new Date().getFullYear();
---

<html lang="en">

<head>

  <Head {title} description={description} permalink={permalink} />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Source+Code+Pro:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900&display=swap"
    rel="stylesheet">
  <script data-host="https://microanalytics.io" data-dnt="false" src="https://microanalytics.io/js/script.js" id="ZwSg9rf6GA" async defer></script>
</head>

<body class="bg-offwhite text-darkblue dark:bg-darkblue dark:text-offwhite text-[20px] font-sans">
  <main>
    <header class="grid justify-center w-full py-4 content-width mb-0">
      <Header />
    </header>
    <slot />
    <footer class="grid w-full py-4 content-width dark:bg-medgray mb-0">
      <SocialMenu />
      <div class="text-center" data-test="copyright">{`Â© ${ thisYear } ${ SiteMeta.title }`}</div>
    </footer>
  </main>
</body>

</html>
