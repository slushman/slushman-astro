---
import Email from 'svg:Email';
import Facebook from 'svg:Facebook';
import LinkedIn from 'svg:LinkedIn';
import Twitter from 'svg:Twitter';

// TODO - update Shurls. Add Mastodon, Reddit, Telegram, Whatsapp
// add a native share sheet button on mobile and tablet

const { description, title, url } = Astro.props;

const shurlLinks = [
  {
    Icon: Email,
    url: `mailto:?subject=${title}&body=${description}`,
  },
  {
    Icon: Facebook,
    url: `https://www.facebook.com/sharer/sharer.php?u=${url}`,
  },
  {
    Icon: LinkedIn,
    url: `https://www.linkedin.com/shareArticle?mini=true&url=${url}&source=${url}`,
  },
  {
    Icon: Twitter,
    url: `https://twitter.com/intent/tweet?url=${url}`,
  },
];
---

<section class="blue-section py-6">
  <h2 class="mb-0">Share this post!</h2>
  <ul class="grid list-reset grid-cols-shurls-sm sm:grid-cols-shurls-lg">
    {shurlLinks.map(({ Icon, url }) => (
    <li class="flex-1 text-center">
      <a class="flex text-center justify-center items-center min-h-[64px] min-w-[64px] rounded-[50%]" href={url}
        rel="noopener noreferrer" target="_blank">
        <Icon />
      </a>
    </li>
    ))}
  </ul>
</section>
