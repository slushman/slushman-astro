---
import { categorySlugs } from 'utils';

const { categories } = Astro.props;

const fullCats = categorySlugs(categories);
---

<ul class="flex list-reset">
  {fullCats.map(
  ({ category, slug }, index) => (
  <li>
    <a href={`/category/${slug}/`}>{category}</a>{index === (fullCats.length - 1) ? '' : ', '}
  </li>
  ))}
</ul>
