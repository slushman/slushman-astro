---
import ExcerptImage from 'component:ExcerptImage';

const { description, pubDate, slug, title } = Astro.props;
---

<article class="grid p-2 my-0 mx-auto max-w-prose">
  <ExcerptImage image={`/post/${slug}/hero.webp`} />
  <h2 class="mb-0 font-merri font-bold">
    <a class="shadow-none" href={`/post/${slug}`}>{title}</a>
  </h2>
  <small data-test="postDate">{pubDate}</small>
  <slot>{description}</slot>
</article>
